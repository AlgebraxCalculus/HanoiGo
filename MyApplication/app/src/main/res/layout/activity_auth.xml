<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hoguom" />

    <!-- Panel cong ở đáy -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:background="@drawable/panel_bg"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- ===================== INTRO ===================== -->
        <LinearLayout
            android:id="@+id/groupIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Let’s Get\nStarted"
                android:textColor="#FFD700"
                android:textSize="30sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Explore Hanoi like never before - join now with HanoiGo!"
                android:textColor="#FAFAD2"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/poppins_regular" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLetsGo"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="end"
                android:minWidth="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Let’s Go"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_chevron_right_24"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                app:iconTint="#000000"
                app:backgroundTint="#019E9B"
                app:strokeColor="#000000"
                app:strokeWidth="2dp"
                app:cornerRadius="28dp" />
        </LinearLayout>

        <!-- ===================== LOGIN ===================== -->
        <LinearLayout
            android:id="@+id/groupLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="72dp">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#FFD700"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <!-- Label Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFD700" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="#FFD700"
                app:prefixTextColor="#80FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your username"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <!-- Label Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFD700" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#FFD700"
                app:endIconMode="password_toggle"
                app:prefixTextColor="#80FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:text="Forgot password?"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="#019E9B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don’t have an account? "
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up now"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#FFD700"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Or"
                    android:textColor="#FFD700"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#FFD700"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:minHeight="54dp"
                android:layout_marginTop="5dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Login using Google"
                android:textAllCaps="false"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="18sp"
                android:includeFontPadding="true"
                app:cornerRadius="32dp"
                app:strokeWidth="1dp"
                app:strokeColor="#FFD700"
                app:icon="@drawable/ic_google_24"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="@null"
                app:backgroundTint="@android:color/transparent"/>

        </LinearLayout>

        <!-- ===================== SIGN UP ===================== -->
        <LinearLayout
            android:id="@+id/groupSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="72dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#FFD700"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your username"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Email"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_email_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignUpEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your email"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Password"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="#019E9B"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#B3FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvLoginNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login now"
                    android:textColor="#FFD700"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </LinearLayout>

        <!-- ===================== Forgot password ===================== -->
        <LinearLayout
            android:id="@+id/groupForgotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot\npassword"
                android:textColor="#FFD700"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Please enter your account’s email to receive a verification OTP code"
                android:textColor="#FAFAD2"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Email"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilForgotEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_email_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtForgotEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your account’s email"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="50dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="#019E9B" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="Back to Login"
                android:textAllCaps="false"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="1dp"
                app:strokeColor="#FFD700" />
        </LinearLayout>

        <!-- ===================== Verify your email ===================== -->
        <LinearLayout
            android:id="@+id/groupVerifyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify\nyour email"
                android:textColor="#FFD700"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Please enter the OTP code sent to"
                android:textColor="#FAFAD2"
                android:textSize="19sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tvMaskedEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thuyvncb3103@gmail.com"
                android:textColor="#FAFAD2"
                android:textSize="19sp"
                android:fontFamily="@font/poppins_medium"/>

            <com.chaos.view.PinView
                android:id="@+id/pinViewOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:cursorVisible="true"
                android:inputType="number"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="#000000"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:itemCount="6"
                app:itemHeight="50dp"
                app:itemWidth="50dp"
                app:itemSpacing="12dp"
                android:itemBackground="@drawable/bg_otp_item"
                app:lineWidth="0dp"
                app:lineColor="@android:color/transparent"/>


            <TextView
                android:id="@+id/tvResendOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:text="Resend OTP code"
                android:textColor="#019E9B"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:text="Verify"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="#019E9B" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerifyBack"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="1dp"
                app:strokeColor="#FFD700" />
        </LinearLayout>

        <!-- ===================== Reset password ===================== -->
        <LinearLayout
            android:id="@+id/groupResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="90dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset password"
                android:textColor="#FFD700"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Please enter your new password"
                android:textColor="#FAFAD2"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="New password"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your new password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Confirm password"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#FFD700"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm your new password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#4DFFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#80FFFFFF" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="24dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="#019E9B" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetBack"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#FFD700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeWidth="1dp"
                app:strokeColor="#FFD700" />
