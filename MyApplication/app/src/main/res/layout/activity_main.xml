<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hoguom" />

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:background="@drawable/panel_bg"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Let’s Get\nStarted"
            android:textColor="#FFD700"
            android:textSize="30sp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/poppins_semibold"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Explore Hanoi like never before - join now with HanoiGo!"
            android:textColor="#FAFAD2"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/poppins_regular"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLetsGo"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="end"
            android:minWidth="0dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Let’s Go"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_chevron_right_24"
            app:iconPadding="12dp"
            app:iconGravity="textStart"
            app:iconTint="#000000"
            app:backgroundTint="@color/teal_700"
            app:strokeColor="#000000"
            app:strokeWidth="2dp"
            app:cornerRadius="28dp"/>
    </LinearLayout>

</FrameLayout>
