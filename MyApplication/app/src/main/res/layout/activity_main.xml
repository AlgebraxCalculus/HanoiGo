<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Ảnh nền -->
    <ImageView
        android:id="@+id/heroImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hoguom" />

    <!-- Panel cong ở đáy -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        android:background="@drawable/panel_bg"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp">

        <!-- ===================== INTRO ===================== -->
        <LinearLayout
            android:id="@+id/groupIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Let’s Get\nStarted"
                android:textColor="#FFD700"
                android:textSize="30sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Explore Hanoi like never before - join now with HanoiGo!"
                android:textColor="#FAFAD2"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/poppins_regular" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLetsGo"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="end"
                android:minWidth="0dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Let’s Go"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_chevron_right_24"
                app:iconPadding="12dp"
                app:iconGravity="textStart"
                app:iconTint="#000000"
                app:backgroundTint="@color/teal_700"
                app:strokeColor="#000000"
                app:strokeWidth="2dp"
                app:cornerRadius="28dp" />
        </LinearLayout>

        <!-- ===================== LOGIN (ẩn ban đầu) ===================== -->
        <LinearLayout
            android:id="@+id/groupLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/loginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#FFFACD"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold" />

            <!-- Label Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFACD" />

            <!-- Username: icon + "|" + input (single line) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_person_24"
                app:startIconTint="#FFFACD"
                app:prefixText="|"
                app:prefixTextColor="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your username"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#B3FFFFFF"
                    android:backgroundTint="#B3FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Label Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFACD" />

            <!-- Password: icon + "|" + input (single line) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="none"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#FFFACD"
                app:endIconMode="password_toggle"
                app:prefixText="|"
                app:prefixTextColor="#B3FFFFFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFFFF"
                    android:textColorHint="#B3FFFFFF"
                    android:backgroundTint="#B3FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Forgot password?"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="#019E9B" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
